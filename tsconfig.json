{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015", "dom"],
		"rootDir": "./scripts",
		"outDir": "./build",
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["./scripts/**/*"]
}
